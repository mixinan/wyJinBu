<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_bg_default"
    android:padding="10dp"
    >
    
    <TextView
        android:id="@+id/tv_text_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="108dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/nav_green"
         />
    <TextView
        android:id="@+id/tv_text_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_text_today"
        android:layout_centerHorizontal="true"
        android:textColor="@color/nav_green"
         />
    <TextView
        android:id="@+id/tv_text_nian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_text_android"
        android:layout_centerHorizontal="true"
        android:textColor="@color/nav_green"
         />

     <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/activity_bg_gray"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:hint="跳过"
        android:textSize="25sp" />

</RelativeLayout>
